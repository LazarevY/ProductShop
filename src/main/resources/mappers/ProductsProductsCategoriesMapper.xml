<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="app.data.mappers.ProductsProductsCategoriesMapper">

    <resultMap id="ProductResultMap" type="app.data.modeles.Product">
        <result column="product_id" jdbcType="INTEGER" property="id"/>
        <result column="product_name" jdbcType="VARCHAR" property="name"/>
        <result column="product_description" jdbcType="VARCHAR" property="description"/>
        <result column="product_weight" jdbcType="VARCHAR" property="weight"/>
        <result column="product_calories" jdbcType="VARCHAR" property="calories"/>
        <result column="product_metadata_id" jdbcType="VARCHAR" property="metadataId"/>
        <collection property="categories" javaType="ArrayList" column="product_id" select="getCategoryListOfProduct"/>
    </resultMap>


    <resultMap id="CategoryResultMap" type="app.data.modeles.ProductCategory">
        <id column="category_id" jdbcType="BIGINT" property="id"/>
        <result column="category_name" jdbcType="BIGINT" property="name"/>
        <collection property="products" javaType="ArrayList" column="category_id" select="getProductListByCategory"/>
    </resultMap>

    <resultMap id="ProductListResultMap" type="app.data.modeles.Product">
        <result column="product_id" jdbcType="INTEGER" property="id"/>
        <result column="product_name" jdbcType="VARCHAR" property="name"/>
        <result column="product_description" jdbcType="VARCHAR" property="description"/>
        <result column="product_weight" jdbcType="VARCHAR" property="weight"/>
        <result column="product_calories" jdbcType="VARCHAR" property="calories"/>
        <result column="product_metadata_id" jdbcType="VARCHAR" property="metadataId"/>
    </resultMap>


    <resultMap id="CategoryListResultMap" type="app.data.modeles.ProductCategory">
        <id column="category_id" jdbcType="BIGINT" property="id"/>
        <result column="category_name" jdbcType="BIGINT" property="name"/>
    </resultMap>
    <insert id="addProductsCategories">
        INSERT INTO gender (gender_name)
        VALUES (#{name});
    </insert>

    <select id="getProductsByCategory" resultMap="ProductResultMap">
        SELECT p.*
        FROM products p
                 JOIN products_product_categories ppc on p.product_id = ppc.product_id
                 JOIN product_categories pc on pc.category_id = ppc.product_category_id
        WHERE pc.category_id = #{id,jdbcType=BIGINT}
    </select>
    <select id="getCategoriesOfProduct" resultMap="CategoryResultMap">
        SELECT pc.*
        FROM product_categories pc
                 JOIN products_product_categories ppc on pc.category_id = ppc.product_category_id
                 JOIN products p on p.product_id = ppc.product_id
        WHERE p.product_id = #{id,jdbcType=BIGINT}
    </select>
    <select id="getProductListByCategory" resultMap="ProductListResultMap">
        SELECT p.*
        FROM products p
                 JOIN products_product_categories ppc on p.product_id = ppc.product_id
                 JOIN product_categories pc on pc.category_id = ppc.product_category_id
        WHERE pc.category_id = #{id,jdbcType=BIGINT}
    </select>
    <select id="getCategoryListOfProduct" resultMap="CategoryListResultMap">
        SELECT pc.*
        FROM product_categories pc
                 JOIN products_product_categories ppc on pc.category_id = ppc.product_category_id
                 JOIN products p on p.product_id = ppc.product_id
        WHERE p.product_id = #{id,jdbcType=BIGINT}
    </select>
</mapper>